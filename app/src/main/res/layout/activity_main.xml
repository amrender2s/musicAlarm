<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#EDFBFA"
    android:layout_margin="30dp">

    <TimePicker
        android:id="@+id/timepicker"
        android:layout_width="wrap_content"
        android:layout_height="360dp"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@+id/locationLayout"
        android:layout_marginVertical="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/locationLogo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bell"/>
        <EditText
            android:id="@+id/location"
            android:hint="Enter Location of Music........."
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine|textAutoComplete|textAutoCorrect"
            android:textColor="#021CF9"
            android:onClick="musicList"/>
    </LinearLayout>

    <Button
        android:layout_marginTop="50dp"
        android:id="@+id/btn"
        android:onClick="btn"
        android:text="Set Music"
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="display all events"
        android:onClick="display"/>


</LinearLayout>